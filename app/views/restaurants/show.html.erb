<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= cl_image_path @restaurant.photo.key %>)">
</div>
<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
</div>
<div class="container">
  <div class="list-inline tabs-underlined">
    <% Product::DISH_TYPE.each do |type|  %>
      <a href="#<%= type.downcase.tr(" ", "-") %>" class="tab-underlined"><%= type %></a>
    <% end %>
  </div>
  <div class="sections">
    <% Product::DISH_TYPE.each do |type|  %>
      <div id="<%= type.downcase.tr(" ", "-") %>">
      <h4><%= type %></h4>
        <%@restaurant.products.where(dish_type: type).each do |product|%>
          <div class="card-product d-flex justify-content-center">
            <%= link_to restaurant_product_path(@restaurant,product) do %>
              <div class="flex-grow-1 p-3">
                <h4><%= product.name %></h4>
                <p><%product.ingredients%></p>
                <p class="pt-2"><%= product.description %></p>
              </div>
              <p class="p-2"><%= product.price %>E</p>
              <% if product.photo.attached? %>
                <%= cl_image_tag product.photo.key, width: 400, height: 300, crop: :fill %>
              <% else %>
                <%=  image_tag "https://t4.ftcdn.net/jpg/03/08/68/19/360_F_308681935_VSuCNvhuif2A8JknPiocgGR2Ag7D1ZqN.jpg" %>
              <% end %>
             <% end %>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "Edit restaurant", edit_restaurant_path  %><br>
  <%= link_to "Back to Restaurants", restaurants_path  %>
</div>
