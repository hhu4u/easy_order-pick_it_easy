<div class="banner-placeholder">
  <% if @restaurant.photo.attached?  %>
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= cl_image_path @restaurant.photo.key %>)">
  <% else %>
      <%=  image_tag "https://t4.ftcdn.net/jpg/03/08/68/19/360_F_308681935_VSuCNvhuif2A8JknPiocgGR2Ag7D1ZqN.jpg" %>
  <% end %>
</div>
<div class="container">
  <h1><%= @restaurant.name %></h1>
</div>
<div class="container">
  <%= render 'restaurant_form', restaurant: @restaurant %>
  <%= link_to "Back to My Restaurants", restaurants_path %>
</div>
