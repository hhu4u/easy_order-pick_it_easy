<%= link_to restaurant_path(@restaurant) do %>
  <i class="fa-solid fa-arrow-left stretch arrow" id="arrow"></i>
<%end%>
<div class="product">
  <%= render "products/product", product: @product %>
  <div class="prod-form">
    <%= simple_form_for [@restaurant, @product, @order] do |f| %>
      <%= f.input :comments, label: false, placeholder: "Tell us your preferences" %>
      <%= f.submit 'Add to cart', class:"btn btn-dark rounded mb-3 w-100" %>
    <% end %>
  </div>
</div>
